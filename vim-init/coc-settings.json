{
        "pyright.enable": true,
        "python.pythonPath": "/usr/bin/python3",
        "python.formatting.provider": "yapf",
        "python.linting.flake8Enabled":true,
        "python.analysis.useLibraryCodeForTypes": false,
        "python.analysis.typeCheckingMode": "off",

        // explorer ---------------------------------------------------------------------------
        "explorer.width": 30,
        "explorer.file.showHiddenFiles": true, // 显示隐藏文件
        "explorer.file.reveal.auto": true, // 打开explorer时默认定位到当前打开的文件
        "explorer.previewAction.onHover": "labeling",
        // "explorer.icon.enableNerdfont": true,
        // "explorer.icon.source": "nerdfont.vim", // 好看的图标
        "explorer.keyMappings.global": {
                "<cr>": ["expandable?", "collapse", "expand"],
                "v": "open:vsplit"
        }
}
